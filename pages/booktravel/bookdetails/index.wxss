/* pages/booktravel/bookdetails/index.wxss */
page{
  height: 100%;
  overflow: hidden;
}
.book-detail-header{
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  height: 27%;
  box-sizing: border-box;
}
.book-detail-header .book-image{
  width: 210rpx;
  height: 280rpx;
  margin-left: 20rpx;
  box-shadow: 2px 2px 2px rgb(200,200,200);
}
.book-detail-header .book-detail-author{
  display: inline-block;
  margin-left: 20rpx;
}
.book-detail-header .book-detail-author .title{
  display: block;
  color: rgb(61,61,61);
  font-size: 16px;
  margin-bottom: 50rpx;
}
.book-detail-header .book-detail-author .author{
  display: block;
  color: rgb(116,177,187);
  font-size: 14px;
  margin-bottom: 25px;
}
.book-detail-header .book-detail-author .rate{
  display: block;
  font-size: 12px;
}
.rate text{
  font-size: 16px;
  font-weight: 500;
}

.book-summary{
  box-sizing: border-box;
  height: 73%;
}
.book-summary .book-summary-header{
  color: rgb(61,61,61);
  font-weight: bold;
  font-size: 14px;
  padding: 40rpx 0 10rpx 20rpx;
  display: block;
  box-sizing: border-box;
  height: 10%;
}
.book-summary .book-summary-content{
  height: 80%;
  border-top: 1px solid rgb(200,200,200);
  border-bottom: 1px solid rgb(200,200,200);
  font-size: 12px;
  color: rgb(135,135,135);
  line-height: 50rpx;
  padding: 10rpx;
  text-indent:10rpx;
  overflow: auto;
    box-sizing: border-box;
}
.publish{
  box-sizing: border-box;
  height: 10%;
  padding: 0;
  background-color:  rgb(13,118,161);
  color: #fff;
  font-size: 18px;
  font-weight: bold;
  width: 100%;
  border-radius: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading_box {
  width: 100%;
  text-align: center;
  position: absolute;
  top: 30%;
  bottom: 30%;
  left: 0;
  right: 0;
}
.loading_box>view {
  display: inline-block;
}
.loading1 {
  background-size: cover;
  width: 50rpx;
  height: 50rpx;
  -webkit-animation: loading 1s steps(12, end) infinite;
  animation: loading 1s steps(12, end) infinite;
}

@-webkit-keyframes loading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
    transform: rotate3d(0, 0, 1, 360deg);
  }
}

@keyframes loading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
    transform: rotate3d(0, 0, 1, 360deg);
  }
}