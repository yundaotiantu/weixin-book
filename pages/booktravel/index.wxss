/**index.wxss**/

.main{
  margin: 20rpx;
  background-color: #fff;
  border-radius : 3px;
  box-shadow: 0 1px 5px #666;
  margin-bottom: 60rpx;
}
.introduce{
  width: 94%;
  padding: 2%;
  padding-top: 8%
}
.book-icon{
  text-align: center;
}
.book-icon image{
  width: 100rpx;
  height: 100rpx;
}
.paragraph{
  display: block;
  width: 100%;
  font-size: 14px;
  color:  #8d8d8d;
  word-break: break-all;
  word-wrap: break-word;
  margin-bottom: 20px;
}
.scan{
  margin:5%;
  margin-bottom: 0;
  padding-bottom: 10%;
}
.scan .scan-btn{
  background-color:#0066ee;
  color:#fff;
  border-radius:25px;
}
.scan .scan-img{
  height: 100rpx;
  width: 100rpx;
  vertical-align: bottom;
}
.new-books-header{
  display: flex;
  justify-content: space-between;
  margin: 10rpx 20rpx;
  padding: 5rpx;
  border-left: 10rpx solid #0066ee;
  text-indent: 10rpx;
  background-color: rgb(249,249,249);
}
.new-books-header-title{
  margin-left: 2%;
  color: #0066ff;
  font-weight: bold;
  font-size: 16px;
}
.new-books .new-books-header .new-books-all{
  margin-right: 2%;
  text-align: right;
  font-size: 14px;
  color: #BBBBBB;
}
.new-book{
  margin:5rpx 5rpx;
  width: 100px;
  height: 150px;
}
.new-book:hover{
  box-shadow: 0 0 25px rgba(0, 0, 0, 0.5);
}
.new-books-content{
  margin-top : 20rpx;
}
.new-books-content image:first-child{
  margin-left: 20rpx;
}